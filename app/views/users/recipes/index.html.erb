<div class="page-header">
  <div class="page-header__content">
    <h1 class="page-header__title"><%= @user.name %>'s Recipes</h1>
  </div>
  <ul class="page-header__actions">
    <li class="page-header__action"><%= link_to "Cookbook", cookbook_user_recipes_path(@user) %></li>
  </ul>
</div>

<%= render 'shared/search_form',
           search_url: user_recipes_path(@user),
           categories: @categories,
           cuisines: @cuisines %>

<%= turbo_frame_tag "recipes-container" do %>
  <%= render 'shared/recipes', recipes: @recipes %>
  <div id="pagination">
    <%= paginate @recipes, remote: true %>
  </div>
<% end %>