<div class="page-header">
  <h1><%= @user.name %>'s Recipes</h1>
  <div class="page-actions">
    <%= link_to "Cookbook", cookbook_user_recipes_path(@user), class: "btn" %>
    <% if authenticated? %>
      <%= link_to "New Recipe", new_recipe_path, class: "btn" %>
    <% end %>
  </div>
</div>

<%= render 'shared/recipes', recipes: @recipes %>
<div id="pagination">
  <%= paginate @recipes, remote: true %>
</div>
