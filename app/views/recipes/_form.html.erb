<%= form_with model: recipe do |form| %>
  <% if recipe.errors.any? %>
    <div role="alert">
      <p><strong><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</strong></p>
      <ul>
        <% recipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="recipe-form__container">
    <div class="recipe-form__content">
      <%# This text_area will have the id 'recipe_content' by default %>
      <%= form.text_area :content %>
    </div>

    <div class="recipe-form__meta">
      <div>
        <%= form.label :category %><br>
        <%= form.select :category, recipe_category_options, { prompt: 'Select a Category' }, { required: true } %>
      </div>

      <div>
        <%= form.label :cuisine %><br>
        <%= form.select :cuisine, recipe_cuisine_options, { include_blank: 'None' } %>
      </div>

      <div>
        <%= form.label :yield %><br>
        <%= form.text_field :yield %>
      </div>

      <div>
        <%= form.label :prep_time, 'Prep Time' %><br>
        <%= form.text_field :prep_time %>
      </div>

      <div>
        <%= form.label :cook_time, 'Cook Time' %><br>
        <%= form.text_field :cook_time %>
      </div>

      <div>
        <%= form.label :source %><br>
        <%= form.text_field :source %>
      </div>
    </div>
  </div>

  <div class="recipe-form__footer">
    <%= form.submit class: 'btn' %>
  </div>
<% end %>

