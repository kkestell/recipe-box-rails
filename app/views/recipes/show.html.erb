<article class="recipe">
  <div class="page-header">
    <div>
      <h1><%= @parsed_recipe.title %></h1>
      <p>by <%= @recipe.user.name %></p>
      <% if @recipe.source.present? %>
        <p><small>Source: <%= @recipe.source %></small></p>
      <% end %>
    </div>
    <div class="page-actions">
      <%= link_to "PDF", pdf_recipe_path(@recipe), class: "btn" %>
      <% if authenticated? and Current.user == @recipe.user %>
        <%= link_to "Edit", edit_recipe_path(@recipe), class: "btn" %>
        <%= button_to "Delete", @recipe, method: :delete, class: "btn", data: { turbo_confirm: "Are you sure?" } %>
      <% end %>
    </div>
  </div>
  <dl class="recipe-meta">
    <% if @recipe.category.present? %>
      <dt>Category</dt>
      <dd><%= @recipe.category %></dd>
    <% end %>
    <% if @recipe.cuisine.present? %>
      <dt>Cuisine</dt>
      <dd><%= @recipe.cuisine %></dd>
    <% end %>
    <% if @recipe.yield.present? %>
      <dt>Yield</dt>
      <dd><%= @recipe.yield %></dd>
    <% end %>
    <% if @recipe.prep_time.present? %>
      <dt>Prep Time</dt>
      <dd><%= @recipe.formatted_prep_time %></dd>
    <% end %>
    <% if @recipe.cook_time.present? %>
      <dt>Cook Time</dt>
      <dd><%= @recipe.formatted_cook_time %></dd>
    <% end %>
  </dl>
  <% @parsed_recipe.components.each do |component| %>
    <section class="recipe-component">
      <% if component.name %>
        <h2><%= component.name %></h2>
      <% end %>
      <% if component.steps.any? %>
        <ol>
          <% component.steps.each do |step| %>
            <li class="recipe-step">
              <p><%= fancy(step.text) %></p>
              <ul>
                <% if step.ingredients.any? %>
                <% step.ingredients.each do |ingredient| %>
                  <li><%= fancy(ingredient) %></li>
                <% end %>
                <% end %>
              </ul>
            </li>
          <% end %>
        </ol>
      <% end %>
    </section>
  <% end %>
</article>